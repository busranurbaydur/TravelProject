<div class="content-form">
    <h3>Bir Yorum Yapınız</h3>
    <form method="post">
        <input type="text" placeholder="Id" name="BlogId" value="@ViewBag.deger" required readonly="readonly" />
        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
        <input type="text" placeholder="Email" name="Mail" required />
        <textarea placeholder="Yorum" name="Yorum"></textarea>
        <input type="submit" value="GÖNDER" />
    </form>
</div>
