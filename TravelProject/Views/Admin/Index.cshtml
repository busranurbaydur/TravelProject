@using TravelProject.Models.Siniflar
@model List<Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bloglar</h2>
<br />
<table class=" table table-bordered">
    <tr>
        <th>Id </th>
        <th>Başlık </th>
        <th>Sil </th>
        <th>Güncelle </th>
        
    </tr>


    @foreach (var x in Model)
    {
        <tr>

            <td>@x.Id</td>
            <td>@x.Baslik </td>
            <td > <a href="/Admin/BlogSil/@x.Id" class="btn btn-danger">Sil </a> </td>
            <td><a href="/Admin/BlogGuncelle/@x.Id" class="btn btn-success">Güncelle</a> </td>
           

        </tr>

    }
    </table>

<a href="/Admin/YeniBlog" class=" btn btn-success">Yeni Blog Ekle</a>

