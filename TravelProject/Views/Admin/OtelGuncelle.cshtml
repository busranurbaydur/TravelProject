@model TravelProject.Models.Siniflar.Otel
@{
    ViewBag.Title = "OtelGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Otel Guncelle</h2>

<br />
@using (Html.BeginForm("OtelGuncelle", "Admin", FormMethod.Post))
{

    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Adi)
    @Html.TextBoxFor(x => x.Adi, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Adresi)
    @Html.TextBoxFor(x => x.Adresi, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.FotoUrl)
    @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Ozellikleri)
    @Html.TextAreaFor(x => x.Ozellikleri, 10, 1, new { @class = "form-control" })

    <br />

    <button class=" btn btn-success">Güncelle</button>
}
